{
	"name": "@pixelwolfhq/next-template",
	"version": "0.0.14",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"type-check": "tsc",
		"lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
		"prettier": "prettier --write \"src/**/*.+(ts|tsx|js|jsx|json|yml|yaml|md|mdx)\" --config ./.prettierrc.js"
	},
	"dependencies": {
		"next": "latest",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@pixelwolfhq/eslint-config": "^0.0.14",
		"@pixelwolfhq/prettier-config": "^0.0.14",
		"@pixelwolfhq/tsconfig": "^0.0.14",
		"@pixelwolfhq/ui": "^0.0.14",
		"@types/node": "^12.12.21",
		"@types/react": "^16.9.16",
		"@types/react-dom": "^16.9.4",
		"@typescript-eslint/eslint-plugin": "^4.6.0",
		"@typescript-eslint/parser": "^4.6.0",
		"eslint": "^7.12.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"husky": "4.3.8",
		"lint-staged": "^10.5.4",
		"prettier": "2.2.1",
		"pretty-quick": "^3.1.0",
		"typescript": "4.0"
	},
	"workspaceDependencies": {
		"@pixelwolfhq/tsconfig": "*",
		"@pixelwolfhq/eslint-config": "*",
		"@pixelwolfhq/prettier-config": "*",
		"@pixelwolfhq/ui": "*"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && npm run lint"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write --config ./.prettierrc.js",
			"eslint --fix"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"gitHead": "9a88dee963264e61d57bff0d2a3f6fa3fbca307d"
}
